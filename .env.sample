# Copy to .env and edit for local dev / production

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=invoices
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/invoices

# Redis (for Celery + signed download tokens)
REDIS_URL=redis://redis:6379/0

# PDF output shared volume
PDF_OUTPUT_DIR=/data/pdfs

# Headless Chrome debug endpoint (container name configured in docker-compose)
CHROME_HOST=chrome
CHROME_DEBUG_PORT=9222

# Celery broker/backend
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT for auth
JWT_SECRET=dev_jwt_secret_replace_in_prod
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Stripe (fill with your keys)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Other
SENDER_EMAIL=you@example.com
